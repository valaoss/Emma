<html lang="en">
<%- include('partials/head') %>
<body>

<%- include('partials/nav') %>

<main class="page page-home">
  <section class="hero">
    <div class="hero-content">
      <h1>Discover fresh stories</h1>
      <p>Read, explore, and share your thoughts with a modern, minimal blog experience.</p>
      <a href="/blogs/create" class="btn btn-primary">Write a new blog</a>
    </div>
  </section>

  <section class="blogs content">
    <header class="blogs-header">
      <h2>Latest blogs</h2>
      <p class="blogs-subtitle">Browse the most recent posts from the community.</p>
    </header>

    <% if (blogs.length > 0) { %>
      <div class="blogs-grid">
        <% blogs.forEach(blog => { %>
          <a class="blog-card" href="/blogs/<%= blog.id %>">
            <div class="blog-card-header">
              <h3 class="blog-title"><%= blog.title %></h3>
            </div>
            <p class="blog-snippet"><%= blog.snippet %></p>
            <div class="blog-meta">
              <span class="blog-meta-pill">Read more â†’</span>
            </div>
          </a>
        <% }) %>
      </div>
    <% } else { %>
      <p class="empty-state">
        There are no blogs to display yet.
        <a href="/blogs/create">Be the first to write one.</a>
      </p>
    <% } %>
  </section>
</main>

<%- include('partials/footer') %>

</body>
</html>
